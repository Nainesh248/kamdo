<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray1"
    tools:context=".fragment.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:id="@+id/rl_profile"
                android:paddingTop="@dimen/_20dp"
                android:paddingLeft="@dimen/_35dp"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_height="130dp"
                tools:context=".activity.AboutActivity">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:background="@drawable/circle_black"
                    android:src="@drawable/no_image" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_toRightOf="@id/iv_profile"
                    android:text="@string/profilename"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                <TextView
                    android:id="@+id/tv_contactno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="@dimen/_2dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_toRightOf="@id/iv_profile"
                    android:text="@string/mobile"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_profile"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/introduction"
                    android:textSize="@dimen/_18dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_20dp"/>
                <TextView
                    android:id="@+id/tv_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_intro"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_below="@id/introduction"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_20dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_intro"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail"
                    android:textSize="@dimen/_18dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_20dp"/>
            </RelativeLayout>
            <Button
                android:id="@+id/tv_login"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_18dp"
                android:background="@drawable/button_background"
                android:text="@string/save"
                android:layout_below="@id/rl_detail"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>