<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray1"
    tools:context=".fragment.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:id="@+id/rl_profile"
                android:paddingTop="@dimen/_20dp"
                android:paddingLeft="@dimen/_35dp"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_height="130dp"
                tools:context=".activity.AboutActivity">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:background="@drawable/circle_black"
                    android:src="@drawable/user_profile" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_toRightOf="@id/iv_profile"
                    android:text="Mohit Fagna"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                <TextView
                    android:id="@+id/tv_contactno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_toRightOf="@id/iv_profile"
                    android:text="99784 51010"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_profile"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/introduction"
                    android:textSize="@dimen/_18dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_20dp"/>
                <TextView
                    android:id="@+id/tv_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Add Discription"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_below="@id/introduction"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_20dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_intro"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail"
                    android:textSize="@dimen/_18dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_20dp"/>
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/detail"
                android:layout_marginTop="@dimen/_10dp">
                <TextView
                    android:id="@+id/uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name1"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_uname"
                    android:layout_width="wrap_content"
                    android:paddingRight="@dimen/_5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_90dp"
                    android:paddingLeft="@dimen/_22sp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/uname"
                    android:text="@string/compname"
                    android:textColor="#000"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/contactno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_no"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_below="@+id/uname"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_cont_no"
                    android:layout_width="wrap_content"
                    android:paddingRight="@dimen/_5dp"
                    android:layout_toRightOf="@id/contactno"
                    android:layout_below="@id/uname"
                    android:layout_marginLeft="@dimen/_60dp"
                    android:paddingLeft="@dimen/_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_contact_no"
                    android:textColor="#000"
                    android:textSize="14dp" />
                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactno"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    >
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addre"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_addre"
                        android:paddingRight="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/_100dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toRightOf="@id/address"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_vaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_address"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    >
                    <TextView
                        android:id="@+id/v_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/v_address"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_vil_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_faddre"
                        android:paddingRight="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/_100dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toRightOf="@id/v_address"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_below="@+id/rl_vaddress"
                    android:textColor="@color/gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_field"
                    android:layout_width="wrap_content"
                    android:paddingRight="@dimen/_5dp"
                    android:layout_toRightOf="@id/field"
                    android:layout_below="@id/rl_vaddress"
                    android:layout_marginLeft="@dimen/_120dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="14dp" />
                <RelativeLayout
                    android:id="@+id/rl_pre_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/field"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    >
                    <TextView
                        android:id="@+id/pre_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pre_working"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp"  />

                    <TextView
                        android:id="@+id/tv_pre_work"
                        android:layout_width="wrap_content"
                        android:paddingRight="@dimen/_5dp"
                        android:paddingLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/pre_work"
                        android:layout_marginLeft="@dimen/_100dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_demand_sal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_pre_work"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    >
                    <TextView
                        android:id="@+id/demand_sal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/demand_sal"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp"  />

                    <TextView
                        android:id="@+id/tv_demand_sal"
                        android:layout_width="wrap_content"
                        android:paddingRight="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/_80dp"
                        android:paddingLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/demand_sal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_pwork_shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_demand_sal"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    >
                    <TextView
                        android:id="@+id/work_shift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/working_shift"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray"
                        android:textSize="14dp"  />

                    <TextView
                        android:id="@+id/tv_work_shift"
                        android:layout_width="wrap_content"
                        android:paddingRight="@dimen/_5dp"
                        android:layout_marginLeft="68dp"
                        android:paddingLeft="@dimen/_5dp"
                        android:layout_toRightOf="@+id/work_shift"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </RelativeLayout>
            </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>