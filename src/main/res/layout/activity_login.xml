<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".login.LoginActivity">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_210dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_100dp"
        android:src="@drawable/kamdo_logo" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="@dimen/_40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:id="@+id/ll_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_des"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_marginRight="50dip"
            android:background="@drawable/round_shape"
            android:orientation="vertical"
            android:padding="@dimen/_20dp">
            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/loginaccount"
                android:textColor="@color/black"
                android:textSize="@dimen/_20dp"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/fl_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_toLeftOf="@+id/ll_contain"
                android:background="@drawable/round_shape_edittext">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:src="@drawable/ic_mobile"/>

                <EditText
                    android:id="@+id/et_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/mobile"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/_50dp"
                    android:paddingRight="@dimen/_20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25dp"
                android:layout_toLeftOf="@+id/ll_contain"
                android:background="@drawable/round_shape_edittext">

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:src="@drawable/ic_password"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/_50dp"
                    android:paddingRight="@dimen/_20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
                <TextView
                    android:id="@+id/forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/forget"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/button_background"
                android:text="@string/signin"
                android:layout_marginBottom="@dimen/_20dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_15dp" />

        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>>
</RelativeLayout>